<% content_for :title, "Models-MNRYP" %>
<%= render 'Homepage/navmenu.html.erb' %>

<div class="container-fluid px-4 mt-4">
   <div class="mb-4">
   		<button class="badge bg-info text-dark filter-button mt-2" data-filter="all"> <%= t('all') %> </button>
        <button class="badge bg-info text-dark filter-button mt-2" data-filter="Male"> <%= t('male') %> </button>
        <button class="badge bg-info text-dark filter-button mt-2" data-filter="Female"> <%= t('female') %> </button>
    </div>
<div class="row">
<% @models.each do |model| %>
	<%= link_to model_path(model), style:"text-decoration:none" do %>
		<div class="col-md-3 col-xs-12 filter <%= model.gender %>">
			<div class="card h-100 model-card" style="width: 18rem;">
				<% model.galleries.each do |gallery|%>
				<%= cl_image_tag(gallery.image, :quality=>"auto:low",:class=>"card-img-top",:fetch_format=>"auto",:flags=>"lossy",:style=>"height: 25rem;",loading:"lazy") %>
					<% break %>
				<% end %>
				<div class="card-body">
					<h6 class="card-title text-center"><%= model.name %></h6>
				</div>
			</div>
		</div>
	<% end %>
<% end %>
</div>
</div>
