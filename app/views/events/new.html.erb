<% content_for :title, "MNR-Today-MNRYP" %>
<%= render 'Homepage/navmenu.html.erb' %>

<div class="container">
    
   <h1 class="form_title">Fill The Event Details <span class="mnryp_word">MNRYP</span></h1>
         
  <div class="row">
        <div class="col-md-6">
              <ul >
                <li class="text-justify">Make sure fill every field.</li>
                <li class="text-justify">Give proper title to the event.</li>
                <li class="text-justify">Provide the location of event.</li>
                <li class="text-justify">Give a brief description of event.</li>
              </ul>
        </div>
          <div class="col-md-6">
              <div class="shadow p-3 mb-5 bg-white rounded">
              <%= form_for @event,html: { multipart: true } do |f| %>
                   <div class="row p-2">
                      <%= f.text_field :title, placeholder: "Event Name" ,class:"w-100" %>
                   </div>
                   <div class="row p-2">
                   	<%= label :date, "Event Date" %>
                      <%= f.date_field :date ,class:"w-100" %>
                   </div>
                   <div class="row p-2">
                      <%= f.text_field :location, placeholder: "Event Location" ,class:"w-100" %>
                   </div>
                   <div class="row p-2">
                      <%= f.text_area :description, placeholder: "Event Description (Max. 50 words)" ,class:"w-100" %>
                   </div>
                   
                   <div class="d-flex justify-content-center">
                    <%= f.submit "Add" , class: "button"%>
                   </div>
                     <%= recaptcha_action('pet_adoption') %>
                <% end %>
              </div>
          </div>
  </div>
</div>

       
       