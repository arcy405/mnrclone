<%= form_for @event,html: { class:"needs-validation", :novalidate=>true } do |f| %>

<!--------------Errors-------------------------------------->
<% if @event.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
    <% @event.errors.full_messages.each do |message|%>
        <p class="responsive-text"><%= message %> </p>
      <%end%>
  </div>
<%end%>
<!------------------------------------------------------------------------------->

	<div class="input-group has-validation">
		<%= f.text_field :title, placeholder: "Event Name" ,class:"form-control mt-2" %>
		<div class="invalid-feedback">
			 Please enter a valid Event Title.
		</div>
    </div>
    <%= label :date, "Event Date",class:" mt-2" %>
    <div class="input-group has-validation">
    	<%= f.date_field :date ,class:"form-control" %>
		<div class="invalid-feedback">
			 Please select a valid Event Date.
		</div>
    </div>
    <div class="input-group has-validation">
    	<%= f.text_field :location, placeholder: "Event Location" ,class:"form-control mt-2" %>
		<div class="invalid-feedback">
			 Please enter a valid Event Location.
		</div>
    </div>
    <div class="input-group has-validation">
    	<%= f.text_area :description, placeholder: "Event Description (Max. 50 words)" ,class:"form-control mt-2" %>
		<div class="invalid-feedback">
			 Please enter a valid Event Description.
		</div>
    </div>

	<!-------------form buttons-------------------->
  <div class="d-flex flex-row mt-2">
    <div class="flex-fill">
      <%= link_to :back do %>
        <span class="cancel-button form-control font-weight-bold text-center">Cancel</span>
      <% end %>
    </div>
    <div class="flex-fill">
      <%= f.submit "Save" , class:"button form-control text-white font-weight-bold", data: { disable_with: "Saving..." } %>
    </div>
  </div>
  <!---------------------#########################-------------------------->
	<%= recaptcha_action('events') %>
<% end %>