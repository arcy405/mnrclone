<% content_for :title, "Pet Adoption-MNRYP" %>
<%= render 'Homepage/navmenu.html.erb' %>

<div class="container">
            <h1 class="form_title">Fill The Pet Details <span class="mnryp_word">MNRYP</span></h1>
  <div class="row">
    <div class="col-md-6">
      <ul >
        <li class="text-justify">Make sure fill every field.</li>
        <li class="text-justify">Use the name of your and also give your name.</li>
        <li class="text-justify">Use the address from where pet can be adopted.</li>
        <li>Your information is safe with us, you will be called for pet adoption in future, THANK YOU!</li>
      </ul>
    </div>
      <div class="col-md-6">
      <div class="shadow p-3 mb-5 bg-white rounded">
        <%= form_for @pet_adoptions,html: { multipart: true } do |f| %>
        
           <div class="row p-2">
              <%= f.text_field :pet_name, placeholder: "Pet Name" ,class:"w-100",:required => true %>
           </div>
           
           
           
           <div class="row p-2">
              <%= f.text_field :contact, placeholder: "Contact Number" ,class:"w-100",:required => true %>
           </div>
           <div class="row p-2">
              <label for="image">Add Image </label>
              <%= f.file_field :image, direct_upload: true %>
              <%= f.hidden_field :image_cache %>
           </div>
           <div class="d-flex justify-content-center">
            <%= f.submit "Add" , class: "button"%>
           </div>
             <%= recaptcha_action('pet_adoption') %>
        <% end %>
        
      </div>
      </div>
  </div>
</div>
   
       
       