
  <div class="about-section paddingTB60 gray-bg">
    <div class="container">
            <div class="row">
              <div class="col-md-12 col-sm-12 d-flex justify-content-center">
                 <div class="about-title clearfix">
                    <h1><i class="fa fa-lock" aria-hidden="true"></i>Admin Login<span>MNRYP</span></h1>
                 </div>
              </div>
            </div>
        </div>
      <section id="contact">
        <div class="container">
           <div class="row justify-content-center">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                      </div>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"username or email" %>
                    </div><br />
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-key icon"></i></span>
                      </div>
                        <%= f.password_field :password, autocomplete: "current-password",class:"form-control" ,placeholder:"password" %>
                    </div><br />
                    <%= f.submit "Log in",class:"btn btn-success form-control" %>
              <% end %>
       </div>
    </section>
 </div>