<% content_for :title, "Blood Donors-MNRYP" %>
<%= render 'Homepage/navmenu.html.erb' %>

<center><%= link_to "Be A DONAR", new_donor_path, class: "btn btn-default", class: "button"%></center>





<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

     <div class="container">
        <div class="row">
        <%@donors.each do |donor| %>
            <div class="col-md-4">
                <div class="card-box">
    
                    <h5 class="card-title">I am <%= donor.name %></h5>
                            <h5 class="card-text">Blood group : <%= donor.blood_group %></h5>
                            <p class="card-text">From <%= donor.address %></p>
                            <p class="card-text"><%=donor.gender %></p>
                            <p class="card-text">Age is <% date_of_birth = donor.dob.to_s %>
                            <% date_of_birth=date_of_birth.split("-")%>
                            <% age = Date.today.year - date_of_birth[0].to_i %>
                            <%= age %>
                            </p>
                            <p class="card-text">Call me at : <%= donor.phone1 %>,<%= donor.phone2 %></p>
                            <p class="card-text">I am <%= donor.status %></p>
                </div>
            </div>
            
            <% end %>
        </div>
    </div>




