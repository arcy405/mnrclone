<div class="container-fluid mt-2">
<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-body">
    <div class="d-flex">
        <div class="justify-content-left">
            <div class="mt-4  mb-2">
                <% if user_signed_in? %>
                    <%= link_to new_donor_path, class:"font-weight-bold  btn bg-success" do %>
                    <%= t('new_donor') %><i class="fas fa-plus-circle ml-2"></i>
                    <% end %>
                <% else %>
                    <%= link_to user_session_path do %>
                        <span  class="btn-outline-danger rounded p-2 border"><%= t('login_to_become_donor') %></span>
                    <% end %>
                <% end %>  
            </div>
        </div>
    </div>
<div class="row">
