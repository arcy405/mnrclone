<% content_for :title, "Telephone Directory-MNRYP" %>
<%= render 'Homepage/navmenu.html.erb' %>

<div class='container-float px-4 pt-4'>
	<div class="about-title clearfix">
	    <span style="font-size: 3vw"> Important/Emergency Numbers </span>
	 </div>
	<div class="row">
	  	<% @important_numbers.each do |number| %>
			  	<div class="col-md-2">
			    <li class="list-group-item ">
			    <%= number.name %><br />
			    <span style="color: blue"><%= number.address %></span>
			    <span class="badge badge-light badge-pill float-right">
			    	<a href="tel:<%= number.phone %>" style="text-decoration: none;" ><i class="fas fa-phone-alt"></i> <%= number.phone %></a>
		    	</span>
			  </li>
		    </div>
	    <% end %>
	</div>
  <hr />
  <div class="about-title clearfix">
	    <span style="font-size: 3vw"> MNR Telephone Directory </span>
	 </div>
  <div class="row">
	  <% @telephone_numbers.each do |letter, telephone_number|%>
	  <div class="col-md-4 mt-2 ">
	  		<div class="about-title clearfix">
                    <span><%= letter %></span>
                 </div>
	  		
	  		<ul class="list-group mb-2">
  			<% telephone_number.each do |number| %>
			  <li class="list-group-item">
			    <%= number.name %><br />
			    <span style="color: blue"><%= number.address %></span>
			    <span class="badge badge-light badge-pill float-right">
			    	<a href="tel:<%= number.phone %>" style="text-decoration: none;" ><i class="fas fa-phone-alt"></i> <%= number.phone %></a>
		    	</span>
			  </li>
		    <% end %>
			</ul>
	  	</div>
	  <% end %>
</div>
</div>

