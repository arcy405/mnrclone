<% content_for :title, "#{@catname}-MNRYP" %>
<%= render 'Homepage/navmenu.html.erb' %>

    <div class="container content-row">
    <!----------------------------------------breadcrumb section-------------------------------------->
            <div class="row pb-2 pl-3">
                <div class="btn-group btn-breadcrumb breadcrumb-default">
                    <a href="<%= root_path %>" class="btn btn-default"><i class="fas fa-home"></i>Home</a>
                    <%= link_to "#{@catname}", :back ,class:"btn btn-default visible-lg-block visible-md-block"%>
                </div>
            </div>
            <hr />
        <!------------------------------------------------------------------------------->
        <div class="row">
         <% @lists.each do |list| %>
            <% if list.status == 1%>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 pb-2">
                    <%= link_to listings_show_path(id: list.id),:style=>'text-decoration:none' do%>
                        <div class="card profile-card-2 h-100">
                            <div class="card-img-block">
                                <% if list.image.present? %>
                                 <%= image_tag list.image_url , :class =>'img-fluid'%>
                                <%end%>
                            </div>
                            <div class="card-body pt-1">
                                <h5 class="card-title"><%= list.name %></h5>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                                <p class="card-text text-muted"><i class="fas fa-map-marker-alt"></i>&nbsp;<%= list.address %></p>
                                <p class="card-text"><i class="fas fa-phone-alt"></i>&nbsp;<%= list.phone %></p>
                            </div>
                        </div>
                    <%end%>
                </div>
            <%end%>
          <%end%>
        </div>
    </div
