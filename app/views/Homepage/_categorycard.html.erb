<div class="pt-2">
<div class="d-flex justify-content-center h4">
    <span class="badge badge-pill badge-info d-none d-sm-block">
    All Listings(<%= Listing.all.count %>)
</span>
</div>
        <% @tags.each do |tag| %>
                 <%= link_to homes_show_path(category: tag.title ),:style=>'text-decoration:none' do%>
                     <div class="container">
                              <div class="card shadow">
                                <div class="card-body">
                                        <div class="row">
                                                <div class="col-8">
                                                    <div class="d-flex">
                                                        <div>
                                                            <% if tag.image.present? %>
                                                                <%= image_tag tag.image_url , :class =>'profile2 rounded-circle'%>
                                                            <%end%>
                                                        </div>
                                                        <div>
                                                           <h6 class="card-category-title ml-2 mt-2"><%=tag.title%></h6>
                                                        </div>
                                                </div>
                                                </div>
                                                    
                                                <div class="col-4">
                                                    <span class="badge rounded-pill bg-light text-dark float-right"><%= tag.listings.size%></span>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                              </div>
            <%end%>
        <%end%>
</div>
