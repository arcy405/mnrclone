<div class="pt-2">
<div class="d-flex justify-content-center h4">
    <span class="badge badge-pill badge-info d-none d-sm-block">
    <%= t('all_listings') %>
        (<%= Listing.all.count %>)
</span>
</div>
<div class="container row">
    <% @tags.each do |tag| %>
        <div class="col-md-3">
            <%= link_to homes_show_path(category: tag.title_en ),:style=>'text-decoration:none' do%>
                <div class="card shadow h-100">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="">
                                <% if tag.image.present? %>
                                    <%= cl_image_tag(tag.image, :quality=>"auto:low",:fetch_format=>"auto",:flags=>"lossy",:class=>"profile2 rounded-circle",loading:"lazy") %>
                                <%end%>
                            </div>
                            <div class="text-wrap">
                                <h6 class="card-category-title ml-2 mt-2"><%= tag.title %></h6>
                            </div>
                            <div class="ml-auto">
                                <span class="badge badge-info"><%= tag.listings.length %></span>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    <%end%>
</div>
</div>