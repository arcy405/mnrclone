<%= form_for @realestate do |f| %>
    <div class="row p-2">
        <%= f.text_field :seller_name , placeholder: "House Name" ,:required => true %>
    </div>
    <div class="row p-2">
        <%= f.text_field :price, placeholder: "Price Per Room / Falt  " ,:required => true %>
    </div>
    <div class="row p-2">
        <%= f.text_field :seller_phone, placeholder: "House Owner Phone  " ,:required => true %>
    </div>
    <div class="row p-2">
        <%= f.text_field :description , placeholder: "House  Address & description " ,:required => true %>
    </div>
    
   
    <div class="d-flex justify-content-center">
        <%= f.submit "Add to market" , class: "btn"%>
    </div>
<% end %>