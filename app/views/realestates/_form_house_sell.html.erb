

<%= form_for @realestate,:html => { :multipart => true } do |f| %>

 <!-------------hidden field ------------------->
  <%= f.hidden_field :user_id, value: "#{current_user.id}"  %>
  <%= f.hidden_field :ptype, value: "sell"  %>
  <!------------------------------------------------>
    <%= f.text_field :propertyname , placeholder: "#{t('realestate_placeholder_1')}" ,class:"form-control mb-2" %>
        <%= f.text_field :price, placeholder: "#{t('realestate_placeholder_2')}" ,class:"form-control mb-2" %>
        <%= f.text_field :address, placeholder: "#{t('realestate_placeholder_3')}" ,class:"form-control mb-2" %>
        <%= f.text_field :seller_name , placeholder: "#{t('realestate_placeholder_4')}" ,class:"form-control mb-2" %>
        <%= f.text_field :seller_phone , placeholder: "#{t('realestate_placeholder_5')}" ,class:"form-control mb-2" %>
        <%= f.text_area :description , placeholder: "#{t('realestate_placeholder_6')}" ,:rows => "4" , class:"form-control mb-2" %>
     <!------------co-ordinates ---->
      <pre> <i class="fas fa-map-marker-alt"></i><%= t('realestate_placeholder_7') %></pre> 
      <div class="row">
        <div class="col-6"><%= f.text_field :latitude ,placeholder: "#{t('realestate_placeholder_8')}", class:"form-control" %></div>
        <div class="col-6"><%= f.text_field :longitude ,placeholder: "#{t('realestate_placeholder_9')}", class:"form-control" %></div>
      </div>
    <!----------------------------->
      <hr />
    <div class="text-muted"><%= t('marketplace_placeholer_5') %></div>
            <%= f.fields_for :realestate_images do |p| %>
                 <%= p.file_field :image, direct_upload: true,:multiple => true, class:"form-control",name: "realestate_images[image][]" %>
                 <%= p.hidden_field :image_cache %>
           <% end %>
     <pre><%= t('marketplace_placeholer_6') %></pre>

    <div class="d-flex flex-row">
      <div class="flex-fill">
        <%= link_to :back do %><span class="cancel-button form-control font-weight-bold text-center"><%= t('cancel')%></span><% end %>
      </div>
      <div class="flex-fill">
        <%= f.submit "#{t('save')}" , class:"button form-control text-white font-weight-bold" %>
      </div>
    </div>
<% end %>