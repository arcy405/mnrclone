<div class="head">
  <% content_for :title, "Real Estate" %>
  <%= render 'Homepage/navmenu.html.erb' %>

   <div class="h1">
      <p class="p1">MNRYP Real Estate</p>
              
     <!--------search box begin ---->
      <div class="row">
          <div class="col-md-12 col-lg-12 col-sm-12 d-flex justify-content-center">
          <div style="float:left;">
          <%= form_tag listings_search_path, :method =>"get" do %>
                <div id="custom-search-input">
                    <div class="input-group">
                      <%= search_field_tag :aa_search_input, params[:aa_search_input],class:"form-control", autocomplete:'off', placeholder:'Search your properties here....', :required => 'required' %>
                            <%= button_tag(type: "submit", class: "btn btn-info btn-sm") do %>
                                <% end %>
                    </div>
                </div>
            <% end %>
            </div>
          </div>
       </div>

      </div>

    </div>
<!-----------search box end------------>
                 <div class="seller_button">
                    <%=  link_to "Sell/Rent Property", new_realestate_path ,class: "button"   %>
                  </div> 


<section>
    <div class="container">
    	<div class="row">
    	  
    		<% @Realestates.each do |realestate| %>
    		<!--Profile Card 5-->
    		<div class="col-md-4 mt-4">
    		    <div class="card profile-card-5">
    		        <div class="card-img-block">
                     <% if realestate.image.present? %>
                                    <%= image_tag realestate.image_url%>
                        <%end%>
    		        </div>
                    <div class="card-body pt-0">
                    <h5 class="card-title"><%= realestate.seller_name%></h5>
                      <h3>  Rs. <%= realestate.price%> /-</h3>
                     <p class="card-text"> <%= realestate.description %></p>
                   
                       <h6 style="color:MAROON";> call Now: <%= realestate.seller_phone %> </h6>
                  </div>
                </div>
                
                
    		</div>
<% end %>
    		
    	</div>
    </div>
</section>
<!-------cards section ends --------->




