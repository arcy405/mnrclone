<% content_for :title, "MNR Marketplace-MNRYP" %>
<%= render 'Homepage/navmenu.html.erb' %>

<div class="container">
    <div class="row mt-4">
        <div class="col-md-6 text-center border-right border-secondery">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
			  <div class="carousel-inner">
			  	<% @realestate.realestate_images.each_with_index do |prop_img,index| %>
			  		<% active_class = "active" if index==0 %>
			  		<div class="carousel-item <%= active_class %>">
			    	<%= cl_image_tag(prop_img.image, :quality=>"auto:low",:fetch_format=>"auto",:flags=>"lossy" , :class=>"carousel-img", loading:"lazy") %>
			    	</div>
			  	<% end %>
			  </div>
			  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
			    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
			    <span class="carousel-control-next-icon" aria-hidden="true"></span>
			    <span class="sr-only">Next</span>
			  </a>
			</div>
        </div>
        <div class="col-md-6">
            <div class="mt-4">
                <h4>
                <strong> <%= @realestate.propertyname %> </strong>
                </h4>
            </div>
             
             <i class="fas fa-map-marker"></i> <%= @realestate.address %>

            <h3>
                Rs.<%= @realestate.price %> /-
            </h3>
            <p>
               <strong> <%= t('seller') %>: </strong>  <%= @realestate.seller_name %>
            </p>	
				<a href="tel:<%= @realestate.seller_phone %>" class="mt-2"><i class="fas fa-phone-alt"></i> <%= @realestate.seller_phone %></h6></a>
				<hr />
			<div class="p-3 mb-2 bg-secondary text-white">
                 <u> <strong> <%= t('description') %>  </strong> </u>
                <h6 class="text-justify"> <%= @realestate.description %></h6>
            </div>

             

               <!--The div element for the map ----------------------->
                  <strong> <i class="fas fa-map-marked-alt"></i> <%= t('gmap') %></strong> <br>
                <% lat = @realestate.latitude %>
                <% long = @realestate.longitude %>
                 <div class="embed-responsive embed-responsive-16by9">
                  <iframe class="embed-responsive-item" src="http://maps.google.com/maps?q=<%= lat %>,<%= long %>&z=15&output=embed" loading="lazy" allowfullscreen></iframe>
                </div>
              <!--------------------map section ends-------------------------------->

                  <!----------dropdown for alert------------------------------------>
                <div class="mt-4" >
                        <p>
                            <a class="btn btn-danger" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                               <%= t('alert') %>
                            </a>
                        </p> 
                        <div class="collapse" id="collapseExample">
                        <div class="card card-body">
                            <%= t('alert_message') %>
                        </div>
                </div> 
             <!------------------------------------------------------------------> 
        </div>  
            <div >
                
            </div>
        </div>
    </div>
  
      
            
       
       
</div>
  <style>.carousel-inner{
  width:100%;
  max-height: 400px !important;
}
.carousel-img{
	width: 100%;
	height: 400px;
}
</style>