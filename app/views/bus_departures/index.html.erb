<% content_for :title, "Bus Departure-MNRYP" %>
<%= render 'Homepage/navmenu.html.erb' %>

<div class='container-float px-4 pt-4'>
<div class="float-left">
    <input type="text" class="search form-control" placeholder="Where you want to go?">
</div>
<span class="counter float-left"></span><br><br>
     <div class="widget stacked widget-table action-table results">
				<div class="widget-header pl-2">
					<i class="fas fa-bus" aria-hidden="true"></i>
					<h3>Bus Departure Schedule</h3>
				</div> 
				<div class="widget-content">
					<table class="table table-striped table-bordered">
						<thead>
							<tr>
								<th>Destination</th>
								<th>Departure Time</th>
								<th>Company</th>
								<th>Bus Number</th>
								<th>Phone</th>
							</tr>
                            <tr class="warning no-result">
                                <td colspan="4"><i class="fa fa-exclamation-circle" aria-hidden="true"></i> No results</td>
                            </tr>
						</thead>
						<tbody>
							
                        <% @busdeparture.each do |depart|%>
							<tr>
								<td><%= depart.destination %></td>
								<td><%= depart.depart_time.strftime("%I:%M %p") %></td>
								<td><%= depart.company %></td>
								<td><%= depart.bus_number %></td>
								<td><%= depart.phone_number %></td>
							</tr>
                        <% end %>
							</tbody>
						</table>
</div> 
</div>
</div>